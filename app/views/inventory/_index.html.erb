<section name="inventory" >

  <div id="shop_cart" class="shopping-cart" data-inventory-target="cart" >
    <div class="shopping-cart-header">

      <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">0</span>
      <div class="shopping-cart-total">
      <div class="total">
        <span class="lighter-text">Total:</span>
        <span class="main-color-text">$0</span>
      </div>
        <a href="javascript:void(0)" id="close_cart" data-action="click->inventory#closecart">
          <i class="fas fa-times"></i>
        </a>
      </div>

    </div> <!--end shopping-cart-header -->

    <ul class="shopping-cart-items">
        <% @cart_products.each do |product| %>
          <li class="clearfix">
            <div class="card_thumb">
              <img src=<%=load_image(product) %> alt='sample'>
            </div>
            <span class="item-name">
              <%= product.name.html_safe%>
            </span>
            <span class="item-price">$<%= product.price%>.00</span>
            <span class="item-quantity">Quantity: 01</span>
          </li>
        <%end%>
    </ul>

    <a href="#" class="button">
        <font style="vertical-align: inherit;">
          <font style="vertical-align: inherit;">Checkout
          </font>
        </font>
    </a>
  </div> <!--end shopping-cart -->

</section>
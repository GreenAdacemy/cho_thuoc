<section name="inventory" >
<% if user_signed_in? %>
  <div id="shop_cart" class="shopping-cart" data-inventory-target="cart" >
    <div class="shopping-cart-header">

      <i class="fa fa-shopping-cart cart-icon"></i><span class="badge"><%= @cart&.counter %></span>
      <div class="shopping-cart-total">
      <div class="total">
        <span class="lighter-text">Total:</span>
        <span class="main-color-text"> <%= I18n.t('money') %>
        <%= @cart&.subtotal%></span>
      </div>
        <a href="javascript:void(0)" id="close_cart" data-action="click->inventory#closecart keypress->screen#on_keypress">
          <i class="fas fa-times"></i>
        </a>
      </div>

    </div> <!--end shopping-cart-header -->

    <ul class="shopping-cart-items">
      <%= render 'orders/partials/show'%>
    </ul>

    <a href="#" class="button">
        <font style="vertical-align: inherit;">
          <font style="vertical-align: inherit;">Checkout
          </font>
        </font>
    </a>
  </div> <!--end shopping-cart -->
<% end %>
</section>
<%= simple_form_for @profile, url: user_profile_path,
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean:       :horizontal_boolean,
    check_boxes:   :horizontal_collection,
    date:          :horizontal_multi_select,
    datetime:      :horizontal_multi_select,
    file:          :horizontal_file,
    radio_buttons: :horizontal_collection,
    range:         :horizontal_range,
    time:          :horizontal_multi_select,
    select:        :horizontal_select
  } do |profile| %>
    <%= profile.input :first_name%>
    <%= profile.input :last_name%>
    <%= profile.input :email, input_html: { autocomplete: 'email' } %>
    <%= profile.input :phone%>
    <%= profile.input :sex, as: :radio_buttons, collection: sexes, wrapper: :horizontal_collection_inline, label_method: :second, value_method: :second %>
    <%= profile.input :address%>  
    <%= profile.input :dob, as: :date %>
    <%= profile.submit 'Update profile'%>
<% end %>

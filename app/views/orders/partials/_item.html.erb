<div class="container" data-controller="inventory">
  <div class="row">

    <div class="order_item col-1">
      <i class="far fa-times-circle" data-action="click->inventory#remove_product" data-id="<%= item.id %>"></i>
    </div>

    <div class="order_item col-4">
      <%= image_tag item.product.thumbnail%>
    </div>

    <div class="order_item col-5">
      <%= item.price%> <%= I18n.t("money")%>
    </div>

    <div class="order_item col-2">
    <%= item.quantity%>
    </div>
  </div>
</div>
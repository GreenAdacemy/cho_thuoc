.product_item[data-controller="cart"]
  .card.mb-4.product-wap.rounded-0
    .card.rounded-0
      .product_img
        img[src=load_image(product) alt='sample']
    .card-body
      .left_des[style="float:left"]
        =link_to product_path(product), style:"text-decoration:none" do
          .h3.text-decoration-none.product_name.show-less
            = product.name
        ul.w-100.list-unstyled.d-flex.justify-content-between.mb-0
          li
            | M/L/X/XL
          li.pt-2
            span.product-color-dot.color-dot-red.float-left.rounded-circle.ml-1
            span.product-color-dot.color-dot-blue.float-left.rounded-circle.ml-1
            span.product-color-dot.color-dot-black.float-left.rounded-circle.ml-1
            span.product-color-dot.color-dot-light.float-left.rounded-circle.ml-1
            span.product-color-dot.color-dot-green.float-left.rounded-circle.ml-1
        ul.list-unstyled.d-flex.justify-content-center.mb-1
          li
            i.text-warning.fa.fa-star
            i.text-warning.fa.fa-star
            i.text-warning.fa.fa-star
            i.text-muted.fa.fa-star
            i.text-muted.fa.fa-star
        p.text-center.mb-0
          | $
          = product.price
          | .00
      .right_des
        .rounded-0.product-overlay.d-flex.align-items-center.justify-content-center
          ul.list-unstyled
            li
              button.btn.btn-success.text-white.mt-2[data-id=product.id data-action="click->cart#add2Cart"] 
                i.btn-success.text-white.mt-2.fas.fa-cart-plus
            li
              =link_to product_path(product) do
                button.btn.btn-success.text-white.mt-2
                  i.btn-success.text-white.mt-2.fas.fa-eye
            li
              =link_to product_path(product) do
                button.btn.btn-success.text-white.mt-2
                  i.btn-success.text-white.mt-2.fas.fa-heart
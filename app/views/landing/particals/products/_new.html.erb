<section name="product" data-controller="product">
  <div id="new">

    <div class="title">sản phẩm mới</div>

    <div class="splide" id='product_new_primary' data-product-target='primary' data-option='primary'>
      <div class="splide__track">
        <ul class="splide__list">
          <% @product.each do |product| %>
            <li class="splide__slide">
              <div class="splide__slide-content">
                <img data-splide-lazy=<%=load_image(product)%> alt='sample'>
              
                <div class="splide__slide-description w-50 text-white p-2 rounded bg-secondary">
                  <%= product.name.html_safe%>
                </div>
              </div>
            </li>
          <%end%>
        </ul>
      </div>
    </div>

    <%=render 'landing/particals/products/second'%>

    <%= link_to "Khám phá tiếp", products_path, class:"btn btn-warning"%>
  </div>
</section>
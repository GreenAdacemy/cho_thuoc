
<h2 class="r_title"><%= I18n.t('title.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, I18n.t('label.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, I18n.t('label.pass') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, I18n.t('label.remember') %>
    </div>
  <% end %>

  <div class="actions" style="margin-top:40px">
    <%= f.submit I18n.t('btn.login'),class:'btn btn-primary' %>
  </div>


<% end %>



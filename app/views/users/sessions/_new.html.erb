<%=render 'layouts/share/header'%>
<section name="login">

  <div class="limiter">
		<div class="container-login100">
      
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<div class="login100-form validate-form">

          <h2 class="r_title p-b-50"><%= I18n.t('title.login') %></h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

					<div class="wrap-input100 validate-input m-b-23" data-validate = "Username is reauired">
						<div class="field" style="text-align: left">
              <%= f.label :email, I18n.t('label.email') %><br />
              <div class="field-login ">
              <i class="fas fa-user"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "input email" %>
              </div>
            </div>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Password is required">
            <div class="field" style="text-align: left">
              <%= f.label :password, I18n.t('label.pass') %><br />
              <div class="field-login">
              <i class="fas fa-lock"></i>
                <%= f.password_field :password, autocomplete: "current-password",placeholder: "input password" %>
              </div>
            </div>
					</div>
					
					<div class="text-right p-t-8 p-b-31">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
					</div>
					
					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
              <button class="login100-form-btn">
                <%= f.submit I18n.t('btn.login'),class:'btn' %>
              </div>
						</div>
					</div>

					<div class="txt1 text-center p-t-54 p-b-20">
						<span>
							Or Sign Up Using
						</span>
					</div>

					<div class="flex-c-m">
						<a href="#" class="login100-social-item bg1">
            <i class="fab fa-facebook-f"></i>
						</a>

						<a href="#" class="login100-social-item bg2">
							<i class="fab fa-twitter"></i>
						</a>

						<a href="#" class="login100-social-item bg3">
							<i class="fab fa-google"></i>
						</a>
					</div>

					<div class="flex-col-c p-t-155">
						<span class="txt1 p-b-17">
							Or Sign Up Using
						</span>

            <%= link_to "Sign up", new_registration_path(resource_name) %><br />
					</div>

        <% end %>
				</form>
			</div>
		</div>
	</div>


</section>

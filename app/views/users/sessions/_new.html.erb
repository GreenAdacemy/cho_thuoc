<%=render 'layouts/share/header'%>
<h2 class="r_title"><%= I18n.t('title.login') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, I18n.t('label.email') %><br />
      <div class="field-login">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <div>
    </div>

    <div class="field">
      <%= f.label :password, I18n.t('label.pass') %><br />
      <div class="field-login">
      <%= f.password_field :password, autocomplete: "current-password" %>
      <div>
    </div>

    <div class="actions" style="margin-top:40px">
      <%= f.submit I18n.t('btn.login'),class:'btn btn-primary' %>
    </div>


  <% end %>

